<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/abmViewLayout" android:orientation="vertical"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	<ScrollView android:layout_marginBottom="50dip" android:id="@+id/abmScrollView"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/abmViewContainer"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_width="fill_parent">
		</LinearLayout>
	</ScrollView>
	<RelativeLayout android:layout_marginTop="-50dip"
		android:id="@+id/abmButtonsView" android:gravity="bottom"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
	</RelativeLayout>
</LinearLayout>